#include<iostream>
using namespace std;

void add()
{
	int num1;
	int num2;
	
	cout<<"Enter 1st Number :";
	cin>>num1;
	
	cout<<"Enter 2nd Number :";
	cin>>num2;
	
	int add=num1+num2;
	cout<<"Addition is :"<<add;
}

void sub()
{
	int num1;
	int num2;
	
	cout<<"Enter 1st Number :";
	cin>>num1;
	
	cout<<"Enter 2nd Number :";
	cin>>num2;
	
	int sub=num1-num2;
	cout<<"Subtraction is :"<<sub;
}

void mult()
{
	int num1;
	int num2;
	
	cout<<"Enter 1st Number :";
	cin>>num1;
	
	cout<<"Enter 2nd Number :";
	cin>>num2;
	
	int multi=num1*num2;
	cout<<"Multiplication is :"<<multi;
}

void div()
{
	int num1;
	int num2;
	
	cout<<"Enter 1st Number :";
	cin>>num1;
	
	cout<<"Enter 2nd Number :";
	cin>>num2;
	
	int div=num1/num2;
	cout<<"Division is :"<<div;
}

int main()
{
	int select;
	
	cout<<"1.Addition\n";
	cout<<"2.Subtraction\n";
	cout<<"3.Multiplication\n";
	cout<<"4.Division\n";
	
	cout<<"Select Number :";
	cin>>select;
	
	if(select==1)
	add();
	
	if(select==2)
	sub();
	
	if(select==3)
	mult();
	
	if(select==4)
	div();
	
	return 0;
}
